<div class="row justify-content-center">
  <div class="col-6 col-sm-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'inline-block-form') do |f| %>
      <br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email' %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'password' %>

      <div>
        <%= f.submit "Log in", class: 'btn btn-outline-primary' %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-primary' %><br />
        <% end -%>
      </div>
    <% end %>
  </div>
</div>

