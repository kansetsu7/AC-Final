<div class="container">
  <div class="tab">
    <%= link_to 'All', root_path, class: "btn btn-outline-primary category-tab #{'active' if @active_name == 'All'}", value: '-1' %>
    <% @categories.each do |category| %>
      <%= link_to category.name, category_path(category.id), class: "btn btn-outline-primary category-tab #{'active' if @active_name == category.name}", value: category.id %>
    <% end %>
  </div>
  <br>
  <div class="content">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Replies count</th>
          <th scope="col">Title</th>
          <th scope="col">Last replied at</th>
          <th scope="col">Viewed count</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.replies_count %></td>
            <td><%= post.title %></td>
            <td><%= post.comments.latest_time %></td>
            <td><%= post.viewed_count %></td>
          </tr>          
        <% end %>
        
      </tbody>
    </table>
    <%= paginate @posts %>
  </div>
</div>